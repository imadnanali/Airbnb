<% layout ("/layouts/boilerPlate")%>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <!-- Back navigation -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="/listings" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Listings
                </a>
                <h1 class="h3 mb-0 text-center flex-grow-1">Property Details</h1>
                <div style="width: 130px;"></div>
            </div>

            <!-- Main card -->
            <div class="card shadow-sm overflow-hidden">
                <!-- Image section with overlay -->
                <div class="position-relative">
                    <img src="<%= typeof listing.image === 'object' ? listing.image.url : listing.image %>" 
                         class="card-img-top property-img" 
                         alt="<%= listing.title %>"
                         onerror="this.src='https://images.unsplash.com/photo-1586810724476-c294fb7ac01b?q=80&w=436&auto=format&fit=crop&ixlib=rb-4.1.0'">
                    <div class="property-price-overlay">
                        <h3 class="text-white mb-0">₹<%= listing.price %><small class="fs-6">/night</small></h3>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Title and location -->
                    <h2 class="card-title h3 mb-2">
                        <%= listing.title %>
                    </h2>
                    <p>By <i><%= listing.owner.username %></i></p>
                    <p class="card-text text-muted mb-3">
                        <i class="fas fa-map-marker-alt text-primary me-2"></i>
                        <%= listing.location %>, <%= listing.country %>
                    </p>

                    <!-- Property features -->
                    <div class="row mb-4">
                        <div class="col-6 col-md-3 mb-3">
                            <div class="text-center p-2 bg-light rounded">
                                <i class="fas fa-bed text-primary fs-4 d-block mb-1"></i>
                                <span class="d-block fw-bold">3 Bedrooms</span>
                                <small class="text-muted">Master with balcony</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="text-center p-2 bg-light rounded">
                                <i class="fas fa-bath text-primary fs-4 d-block mb-1"></i>
                                <span class="d-block fw-bold">2 Bathrooms</span>
                                <small class="text-muted">1 with tub</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="text-center p-2 bg-light rounded">
                                <i class="fas fa-ruler-combined text-primary fs-4 d-block mb-1"></i>
                                <span class="d-block fw-bold">120 m²</span>
                                <small class="text-muted">Spacious living</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="text-center p-2 bg-light rounded">
                                <i class="fas fa-users text-primary fs-4 d-block mb-1"></i>
                                <span class="d-block fw-bold">6 Guests</span>
                                <small class="text-muted">Comfortable</small>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <h4 class="h5 mb-3">Description</h4>
                    <p class="card-text mb-4">
                        <%= listing.description %>
                    </p>

                    <!-- Amenities -->
                    <h4 class="h5 mb-3">Amenities</h4>
                    <div class="row mb-4">
                        <div class="col-6 col-md-4 mb-2">
                            <span><i class="fas fa-wifi text-primary me-2"></i> High-speed WiFi</span>
                        </div>
                        <div class="col-6 col-md-4 mb-2">
                            <span><i class="fas fa-parking text-primary me-2"></i> Free parking</span>
                        </div>
                        <div class="col-6 col-md-4 mb-2">
                            <span><i class="fas fa-snowflake text-primary me-2"></i> Air conditioning</span>
                        </div>
                        <div class="col-6 col-md-4 mb-2">
                            <span><i class="fas fa-tv text-primary me-2"></i> Smart TV</span>
                        </div>
                        <div class="col-6 col-md-4 mb-2">
                            <span><i class="fas fa-utensils text-primary me-2"></i> Fully equipped kitchen</span>
                        </div>
                        <div class="col-6 col-md-4 mb-2">
                            <span><i class="fas fa-swimming-pool text-primary me-2"></i> Swimming pool access</span>
                        </div>
                    </div>

                    <!-- Reviews Section -->
                    <div class="mt-4 pt-4 border-top">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="h5 mb-0">Guest Reviews 
                                <% if (listing.reviews && listing.reviews.length > 0) { %>
                                    <span class="badge bg-primary ms-2"><%= listing.reviews.length %></span>
                                <% } %>
                            </h4>
                            
                            <% if (curruser) { %>
                                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#reviewModal">
                                    <i class="fas fa-plus me-1"></i>Add Review
                                </button>
                            <% } %>
                        </div>

                        <% if (listing.reviews && listing.reviews.length > 0) { %>
                            <div class="reviews-container">
                                <% listing.reviews.forEach(review => { %>
                                    <div class="review-item mb-3 p-3 bg-light rounded">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="d-flex align-items-center">
                                                <strong class="text-dark me-2"><%= review.author? review.author.username : 'Anonymous' %></strong>
                                                <small class="text-muted">
                                                    <div class="star-rating-display">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <% if (i <= review.rating) { %>
                                                                <i class="fas fa-star text-warning"></i>
                                                            <% } else { %>
                                                                <i class="far fa-star text-warning"></i>
                                                            <% } %>
                                                        <% } %>
                                                        <span class="ms-1">(<%= review.rating %>.0)</span>
                                                    </div>
                                                </small>
                                            </div>
                                            <% if (curruser && review.author && review.author.equals(curruser._id)) { %>
                                                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                                                    <button type="submit" onclick="return confirm('Are you sure you want to delete your review?')"  class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            <% } %>
                                        </div>
                                        <p class="mb-2 text-dark"><%= review.comment %></p>
                                        <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString() %></small>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                <p class="text-muted mb-0">No reviews yet. Be the first to review this property!</p>
                                <% if (curruser) { %>
                                    <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#reviewModal">
                                        <i class="fas fa-plus me-1"></i>Write First Review
                                    </button>
                                <% } else { %>
                                    <p class="text-muted small mt-2"><a href="/login" class="text-primary">Sign in</a> to leave a review</p>
                                <% } %>
                            </div>
                        <% } %>
                    </div>

                    <!-- Action buttons with fixed layout -->
                    <div class="d-flex flex-wrap justify-content-between align-items-center mt-4 pt-4 border-top">
                        <div class="d-flex flex-wrap gap-3">
                            <% if (curruser && listing.owner && listing.owner.equals(curruser._id)) { %>
                                <a class="btn btn-primary px-4" href="/listings/<%= listing._id %>/edit">
                                    <i class="fas fa-edit me-2"></i>Edit Listing
                                </a>

                                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                                    <button class="btn btn-outline-danger px-4" onclick="return confirm('Are you sure you want to delete your listing')">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </form>
                            <% } %>
                        </div>
                        
                        <a href="#" class="btn btn-success px-4 mt-2 mt-md-0">
                            <i class="fas fa-calendar-check me-2"></i>Book Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<% if (curruser) { %>
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Write a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/listings/<%= listing._id %>/reviews" id="reviewForm">
                <div class="modal-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold">Rating</label>
                        <div class="rating-container">
                            <div class="rating-stars" id="starRating">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <input type="radio" id="star<%= i %>" name="review[rating]" value="<%= i %>" class="star-input">
                                    <label for="star<%= i %>" class="star-label">
                                        <i class="far fa-star"></i>
                                        <span class="star-number"><%= i %></span>
                                    </label>
                                <% } %>
                            </div>
                            <div class="rating-text text-center mt-2">
                                <small class="text-muted" id="ratingText">Select your rating</small>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label fw-bold">Comment</label>
                        <textarea class="form-control" id="comment" name="review[comment]" rows="4" 
                                  placeholder="Share your experience with this property..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitReview">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% } %>

<style>
    .property-img {
        height: 450px;
        object-fit: cover;
        width: 100%;
        background-color: #f8f9fa;
    }

    .property-price-overlay {
        position: absolute;
        bottom: 20px;
        right: 20px;
        background: rgba(0, 0, 0, 0.7);
        padding: 10px 20px;
        border-radius: 8px;
        backdrop-filter: blur(5px);
    }

    .card {
        border: none;
        border-radius: 12px;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #2c3e50, #1a2530);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #1a2530, #2c3e50);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-success {
        background: linear-gradient(135deg, #198754, #157347);
        border: none;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #157347, #198754);
        transform: translateY(-2px);
    }

    .review-item {
        transition: transform 0.2s ease;
        border-left: 4px solid #007bff;
    }

    .review-item:hover {
        transform: translateX(5px);
    }

    .star-rating-display {
        display: inline-flex;
        gap: 2px;
        align-items: center;
    }

    /* COMPLETELY FIXED STAR RATING SYSTEM */
    .rating-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem 0;
    }

    .rating-stars {
        display: flex;
        gap: 4px;
        position: relative;
    }

    .star-input {
        display: none;
    }

    .star-label {
        position: relative;
        cursor: pointer;
        font-size: 2.5rem;
        color: #ddd;
        transition: all 0.2s ease;
        padding: 5px;
    }

    .star-label:hover {
        transform: scale(1.1);
    }

    .star-number {
        position: absolute;
        top: -8px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 0.7rem;
        font-weight: bold;
        color: #6c757d;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .star-label:hover .star-number {
        opacity: 1;
    }

    /* Highlight stars from left to right when checked */
    .star-input:checked ~ .star-label .fa-star,
    .star-label:hover .fa-star,
    .star-label:hover ~ .star-label .fa-star {
        color: #ddd !important;
    }

    .star-input:checked + .star-label .fa-star,
    .star-label:hover .fa-star {
        color: #ffc107 !important;
    }

    .star-input:checked + .star-label ~ .star-label .fa-star {
        color: #ddd !important;
    }

    /* Keep stars yellow when a rating is selected */
    .rating-stars:has(.star-input:checked) .star-label .fa-star {
        color: #ffc107 !important;
    }

    .rating-stars:has(.star-input:checked) .star-input:checked ~ .star-label .fa-star {
        color: #ddd !important;
    }

    /* Rating text styles */
    .rating-text {
        min-height: 20px;
    }

    /* Ensure consistent spacing */
    .border-top {
        border-top: 1px solid #dee2e6 !important;
        padding-top: 1.5rem !important;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .property-img {
            height: 300px;
        }
        
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }
        
        .d-flex.gap-3 {
            justify-content: center;
            width: 100%;
        }
        
        .btn-success {
            width: 100%;
            margin-top: 1rem !important;
        }
        
        .star-label {
            font-size: 2rem;
        }
        
        .star-number {
            font-size: 0.6rem;
            top: -6px;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

 <script>
    document.addEventListener('DOMContentLoaded', function() {
        const starInputs = document.querySelectorAll('.star-input');
        const starLabels = document.querySelectorAll('.star-label');
        const ratingText = document.getElementById('ratingText');
        const submitBtn = document.getElementById('submitReview');
        const reviewForm = document.getElementById('reviewForm');
        
        const ratingMessages = {
            1: "Poor - Very disappointed",
            2: "Fair - Could be better", 
            3: "Good - Met expectations",
            4: "Very Good - Enjoyed the stay",
            5: "Excellent - Outstanding experience"
        };
        
        // Initialize all stars
        starLabels.forEach(label => {
            label.querySelector('.fa-star').className = 'far fa-star';
        });
        
        // Star hover effect
        starLabels.forEach((label, index) => {
            const starNumber = index + 1;
            
            label.addEventListener('mouseenter', function() {
                starLabels.forEach((l, i) => {
                    const icon = l.querySelector('.fa-star');
                    if (i <= index) {
                        icon.className = 'fas fa-star';
                        icon.style.color = '#ffc107';
                    } else {
                        icon.className = 'far fa-star';
                        icon.style.color = '#ddd';
                    }
                });
                
                ratingText.textContent = ratingMessages[starNumber] || `Rating: ${starNumber}`;
                ratingText.className = 'text-warning fw-bold';
            });
            
            label.addEventListener('mouseleave', function() {
                const checkedInput = document.querySelector('.star-input:checked');
                
                if (checkedInput) {
                    const checkedValue = parseInt(checkedInput.value);
                    // Restore to checked state
                    starLabels.forEach((l, i) => {
                        const icon = l.querySelector('.fa-star');
                        if (i < checkedValue) {
                            icon.className = 'fas fa-star';
                            icon.style.color = '#ffc107';
                        } else {
                            icon.className = 'far fa-star';
                            icon.style.color = '#ddd';
                        }
                    });
                    ratingText.textContent = ratingMessages[checkedValue] || `Rating: ${checkedValue}`;
                    ratingText.className = 'text-warning fw-bold';
                } else {
                    // Reset to empty state
                    starLabels.forEach(l => {
                        const icon = l.querySelector('.fa-star');
                        icon.className = 'far fa-star';
                        icon.style.color = '#ddd';
                    });
                    ratingText.textContent = 'Select your rating';
                    ratingText.className = 'text-muted';
                }
            });
            
            // Click event
            label.addEventListener('click', function() {
                const starValue = starNumber;
                
                // Update all stars
                starLabels.forEach((l, i) => {
                    const icon = l.querySelector('.fa-star');
                    if (i < starValue) {
                        icon.className = 'fas fa-star';
                        icon.style.color = '#ffc107';
                    } else {
                        icon.className = 'far fa-star';
                        icon.style.color = '#ddd';
                    }
                });
                
                // Update rating text
                ratingText.textContent = ratingMessages[starValue] || `Rating: ${starValue}`;
                ratingText.className = 'text-warning fw-bold';
                
                // Enable submit button
                submitBtn.disabled = false;
            });
        });
        
        // Form submission validation
        reviewForm.addEventListener('submit', function(e) {
            const checkedRating = document.querySelector('.star-input:checked');
            const comment = document.getElementById('comment').value.trim();
            
            if (!checkedRating) {
                e.preventDefault();
                ratingText.textContent = 'Please select a rating';
                ratingText.className = 'text-danger fw-bold';
                return false;
            }
            
            if (!comment) {
                e.preventDefault();
                alert('Please write a comment for your review');
                return false;
            }
        });
        
        submitBtn.disabled = true;
    });
</script>